{
  "name": "@bullring/payment-widget",
  "private": false,
  "version": "1.0.6",
  "publishConfig": {
    "access": "public"
  },
  "description": "The POS for Crypto: Accept Crypto, Get Paid in Local Currency.",
  "main": "dist/payment-widget.cjs.js",
  "module": "dist/payment-widget.js",
  "types": "dist/payment-widget.d.ts",
  "unpkg": "dist/payment-widget.umd.js",
  "style": "dist/styles.css",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:tailwind && rollup -c",
    "dev": "concurrently \"npm run watch:rollup\" \"npm run watch:tailwind\"",
    "watch:rollup": "rollup -c -w",
    "build:tailwind": "tailwindcss -i ./src/styles/index.css -o ./src/styles/styles.css",
    "watch:tailwind": "tailwindcss -i ./src/styles/index.css -o ./src/styles/styles.css --watch"
  },
  "keywords": [
    "lightning",
    "crypto",
    "bitcoin",
    "stablecoin"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "i18next": "^24.2.2",
    "lucide-react": "^0.263.1",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.4.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "postcss": "^8.5.1",
    "rollup": "^4.32.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "3.4.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  }
}
