{
  "compilerOptions": {
   "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es5", 
    "jsx": "react-jsx", // Ensure it's React's JSX runtime
    "skipLibCheck": true, // Ignores library type checking
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["react"],
    "module": "esnext",
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "jsxImportSource": "react",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./node_modules/lucide-react"]
  },
  "include": ["src"]
}
